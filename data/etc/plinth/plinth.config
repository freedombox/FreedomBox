box_name = FreedomBox

[Path]
# directory locations
file_root = /usr/share/plinth
config_dir = /etc/plinth
data_dir = /var/lib/plinth
log_dir = /var/log/plinth
pid_dir = /var/run
server_dir = plinth/
actions_dir = /usr/share/plinth/actions
doc_dir = /usr/share/doc/plinth

# file locations
store_file = %(data_dir)s/plinth.sqlite3
