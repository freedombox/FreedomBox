[Unit]
Description=Plinth Web Interface
Documentation=man:plinth(1)
After=network.target

[Service]
ExecStart=/usr/bin/plinth
Restart=on-failure
ExecReload=/bin/kill -HUP $MAINPID
User=plinth
Group=plinth

[Install]
WantedBy=multi-user.target
