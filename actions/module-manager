# Usage:
#   module-manager list-available
#   module-manager list-enabled <config_dir>
#   module-manager enable <config_dir> <module_name>
#   module-manager disable <config_dir> <module_name>

# list of modules that may be enabled/disabled
modules="owncloud"

case "$1" in
"list-available")
    echo "$modules"
    ;;

"list-enabled")
    for module in $modules
    do
        if [ -e "$2"/modules-enabled/$module ] ; then
            echo $module
        fi
    done
    ;;

"enable")
    for module in $modules
    do
        if [ "$3" = $module ] ; then
            if [ ! -e "$2"/modules-enabled/$module ] ; then
                echo "plinth.modules.$module" >"$2"/modules-enabled/$module
                RETVAL=$?
                if [ $RETVAL -eq 0 ] ; then
                    echo "enabled" $module
                else
                    echo "failed to enable" $module
                fi
                exit $RETVAL
            fi
        fi
    done
    echo "failed to enable invalid module" "$3"
    exit 1
    ;;

"disable")
    for module in $modules
    do
        if [ "$3" = $module ] ; then
            if [ -e "$2"/modules-enabled/$module ] ; then
		rm -f "$2"/modules-enabled/$module
                RETVAL=$?
                if [ $RETVAL -eq 0 ] ; then
                    echo "disabled" $module
                else
                    echo "failed to disable" $module
                fi
                exit $RETVAL
            fi
        fi
    done
    echo "failed to disable invalid module" "$3"
    exit 1
    ;;
esac
